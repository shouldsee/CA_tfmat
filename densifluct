samplesys
sys.N=500;
sys.k=600;
sys.hmax=100;
sys=change_adv(sys,'2dtca',{6152,0.5});
sys0=sys;
avi=sys0.rdf([sys0.N sys0.sizf(sys0)]);




syss=sys0;
avc=avi;
intl=6;
for horizon=1:sys.hmax;
    avc(:,:,:)=syss.adv(squeeze(avc(:,:,:)),horizon);
    k=mod(horizon,intl)+1;
    avk(k,:,:,:)=avc;
    if k==intl
%     imagesc(squeeze(avc(1,:,:)));
    imagesc(squeeze(mean(avk(:,1,:,:),1))    );
     drawnow
    end
end